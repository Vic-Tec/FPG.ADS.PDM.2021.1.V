<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CadastroActivity">

    <ImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:id="@+id/imvFoto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:background="@drawable/borda"
            android:scaleType="centerCrop"
            android:cropToPadding="true" app:layout_constraintHorizontal_bias="0.498"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:id="@+id/edtNome"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="48dp"
            app:layout_constraintTop_toBottomOf="@id/imvFoto"
            android:layout_marginTop="16dp"
    />
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:id="@+id/edtEmail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtNome"
            android:layout_marginTop="8dp"
            android:layout_marginStart="48dp"
    />
    <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/edtEmail"
            app:layout_constraintStart_toStartOf="@id/edtEmail"
            android:layout_marginTop="8dp"
            android:id="@+id/rdgCategoria">
        <RadioButton android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:id="@+id/rdbCasa"
                     android:text="Casa"
                     android:onClick="OnCategoriaClick"/>
        <RadioButton android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:id="@+id/rdbFaculdade"
                     android:text="Faculdade"
                     android:onClick="OnCategoriaClick"/>
        <RadioButton android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:id="@+id/rdbTrabalho"
                     android:text="Trabalho"
                     android:onClick="OnCategoriaClick"/>
    </RadioGroup>
    <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spnEstagio"
            app:layout_constraintTop_toBottomOf="@id/rdgCategoria"
            app:layout_constraintStart_toStartOf="@+id/rdgCategoria"
            android:layout_marginTop="12dp"/>
    <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/swtUrgente"
            app:layout_constraintTop_toBottomOf="@id/spnEstagio"
            app:layout_constraintStart_toStartOf="@+id/rdgCategoria"
            android:text="Urgente?"
            android:checked="false"
            android:layout_marginTop="4dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSalvar"
            android:backgroundTint="#FFC107"
            android:drawableLeft="@drawable/ic_floppy_disk"
            android:drawablePadding="8dp"
            android:text="Salvar"
            app:layout_constraintTop_toBottomOf="@id/swtUrgente"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>